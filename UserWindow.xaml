<Window x:Class="DoseCheck.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoseCheck"
        mc:Ignorable="d"
        Title="DoseCheck" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.15*"/>
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,7,0,0"  Grid.Row="0" Grid.Column ="2" Grid.ColumnSpan ="3" TextWrapping="Wrap" TextAlignment="Center" FontSize="36" Background="#FF95D1FF" Width="473"><Run Language="fr-fr" Text="E"/><Run Text="valuation dosimétrique"/></TextBlock>

        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="7" Grid.Column ="0" Grid.ColumnSpan ="7"  RenderTransformOrigin="1.556,0.503" Fill="#FF95D1FF">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="0" Grid.Column ="0" Grid.RowSpan="8" Stroke="Black" RenderTransformOrigin="1.556,0.503" Fill="#FF95D1FF"/>
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="0" Grid.Column ="6" Grid.RowSpan="8" Stroke="Black" RenderTransformOrigin="1.556,0.503" Fill="#FF95D1FF"/>

        <TextBlock  x:Name="Patient_Info"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="2" Grid.Column ="2" Grid.ColumnSpan="3" TextWrapping="Wrap" Text="TextBox" IsEnabled="False" TextAlignment="Center" />

        <Image x:Name="image" Grid.Row="1" Grid.RowSpan="2" Grid.Column ="1" Source="B:\RADIOTHERAPIE\Killian\Dosi\Script\1.fini\DoseCheck\fisherMan4.png" Panel.ZIndex="1"/>


        <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center"  Grid.Row="3" Grid.Column ="1" Grid.ColumnSpan="5" TextWrapping="Wrap"  TextAlignment="Center" FontSize="14"><Run Text="Choississez l"/><Run Text="e fichier correspondant à la localisation et "/><Run Language="fr-fr" Text="aux "/><Run Text="contraintes dosimétriques à évaluer"/><Run Language="fr-fr" Text="."/></TextBlock>
        <ComboBox x:Name="Box_File"  Grid.Row="4" Grid.Column ="2" Grid.ColumnSpan="3" PreviewMouseWheel="ComboBox_PreviewMouseWheel" DropDownOpened="ComboBox_DropDownOpened" DropDownClosed="ComboBox_DropDownClosed"  SelectionChanged="ComboBox_SelectionChanged" Margin="10,15,10,0" Grid.RowSpan="2"/>


        <Grid Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.05*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="OK_Button" Content="OK"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="1" Grid.Column ="1" Click="Button_Click"/>
            <Button Content="Close"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="1" Grid.Column ="3" Background="#FFFF2727" Click="Button_Close"/>
        </Grid>
    </Grid>
</Window>
